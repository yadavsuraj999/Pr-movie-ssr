<%- include("partials/start") %>
    <div class="layer"></div>
    <a class="skip-link sr-only" href="#skip-target">Skip to content</a>
    <div class="page-flex">
        <%- include("partials/aside.ejs") %>
            <div class="main-wrapper">
                <main class="main users my-5 chart-page suraj" id="skip-target">
                    <div class="container ">
                        <div class="form-header ">
                            <h3><i class="fas fa-film"></i> Edit Movie</h3>
                            <p>Fill in the details below to add a new movie to the database</p>
                        </div>
                        <form id="movieForm" action="/edit-movie/<%= movie._id %>" method="post"
                            enctype="multipart/form-data">
                            <div class="mb-2">
                                <label class="form-label">
                                    <i class="fas fa-video"></i> Movie Name
                                </label>
                                <input type="text" name="name" class="form-control" value="<%= movie.name %>"
                                    placeholder="Enter movie name">
                            </div>
                            <div class="mb-2">
                                <label class="form-label">
                                    <i class="fas fa-theater-masks"></i> Genre
                                </label>
                                <select class="form-select" name="genre">
                                    <option value="Action" <%=movie.genre==='Action' ? 'selected' : '' %>>Action
                                    </option>
                                    <option value="Drama" <%=movie.genre==='Drama' ? 'selected' : '' %>>Drama</option>
                                    <option value="Comedy" <%=movie.genre==='Comedy' ? 'selected' : '' %>>Comedy
                                    </option>
                                    <option value="Romance" <%=movie.genre==='Romance' ? 'selected' : '' %>>Romance
                                    </option>
                                    <option value="Horror" <%=movie.genre==='Horror' ? 'selected' : '' %>>Horror
                                    </option>
                                    <option value="Sci" <%=movie.genre==='Sci' ? 'selected' : '' %>>Sci-Fi</option>
                                    <option value="Thriller" <%=movie.genre==='Thriller' ? 'selected' : '' %>>Thriller
                                    </option>
                                    <option value="Documentary" <%=movie.genre==='Documentary' ? 'selected' : '' %>
                                        >Documentary</option>
                                </select>
                            </div>
                            <div class="mb-2">
                                <label class="form-label">
                                    Release Date
                                </label>
                                <input type="date" name="date" class="form-control" value="<%= movie.date %>">
                            </div>
                            <div class="mb-2">
                                <label class="form-label">
                                    <i class="fas fa-image"></i> Upload Movie Poster
                                </label>
                                <div class="file-input-wrapper">
                                    <label for="fileInput" class="file-input-label">
                                        <i class="fas fa-cloud-upload-alt"></i>
                                        <span id="fileText">Click to browse or drag and drop</span>
                                    </label>
                                    <input type="file" name="photo" id="fileInput" class="form-control"
                                        accept="image/*">
                                </div>
                            </div>
                            <div class="mb-2">
                                <label class="form-label">
                                    <i class="fas fa-align-left"></i> Description
                                </label>
                                <textarea name="description" class="form-control" rows="4"
                                    placeholder="Write a brief description of the movie..."><%= movie.description %></textarea>
                            </div>
                            <div class="mb-2">
                                <label class="form-label">
                                    <i class="fas fa-star"></i> Rating (1-10)
                                </label>
                                <input type="number" name="rating" class="form-control rating-input" min="1" max="10"
                                    step="0.1" value="<%= movie.rating %>" placeholder="8.5">
                            </div>
                            <div class="d-flex justify-content-center mt-3">
                                <button class="btn btn-submit">
                                    <i class="fas fa-check-circle me-2"></i>Update Movie
                                </button>
                            </div>
                        </form>

                    </div>

                </main>
            </div>
    </div>

    <%- include("partials/end.ejs") %>