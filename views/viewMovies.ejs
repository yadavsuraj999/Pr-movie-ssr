<div class="">
    <%- include("partials/start") %>

    <div class="layer"></div>
    <a class="skip-link sr-only" href="#skip-target">Skip to content</a>

    <div class="d-flex">
        <%- include("partials/aside.ejs") %>
        <div class="w-100 ">
            <%- include("partials/nav.ejs") %>
            <h1 class="text-center mx-5 py-5 fw-bold text-dark mb-5">Movie Collection</h1>

            <% if (movies.length === 0) { %>
                <div class="alert alert-warning text-center w-100">
                    <strong>Your Movie Collection is Empty</strong>
                </div>
            <% } else { %>
                <div class="row px-5 d-flex justify-content-center g-4">
                    <% movies.map((movie) => { %>
                        <div class="col-md-4 col-12">
                            <div class="card movie-card shadow-lg border-0 rounded-4">
                                <div class="poster-container">
                                    <% if (movie.photo) { %>
                                        <img src="<%= movie.photo %>" class="card-img-top" alt="<%= movie.name %>">
                                    <% } else { %>
                                        <img src="path/to/default-image.jpg" class="card-img-top" alt="Default image">
                                    <% } %>

                                    <span class="badge bg-white text-dark year-badge">
                                        <%= movie.date %>
                                    </span>
                                    <span class="badge rating-badge px-3 py-2">
                                        <i class="bi bi-star-fill me-1"></i>
                                        <%= movie.rating %>
                                    </span>
                                </div>
                                <div class="card-body">
                                    <h5 class="card-title">
                                        <%= movie.name %>
                                    </h5>

                                    <div class="d-flex gap-2">
                                        <a href="/edit-movie/<%= movie._id %>"
                                           class="btn btn-primary flex-fill">
                                           <i class="bi bi-pencil-square me-1"></i>Edit
                                        </a>
                                        <a href="/delete-movie/<%= movie._id %>"
                                           class="btn btn-danger flex-fill">
                                           <i class="bi bi-trash me-1"></i>Delete
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% }) %>
                </div>
            <% } %>
        </div>
    </div>

    <%- include("partials/end.ejs") %>
</div>
